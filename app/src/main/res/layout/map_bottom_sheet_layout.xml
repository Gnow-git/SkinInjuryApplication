<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bs_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_launcher_gallery" />

    <LinearLayout
        android:id="@+id/hospital_Info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/bs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BottomSheet Test"
            android:textSize="25sp" />

        <RatingBar
            android:id="@+id/bs_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            style="@style/Widget.AppCompat.RatingBar.Indicator"/>

        <TextView
            android:id="@+id/bs_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country/City/Address"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bs_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textSize="20sp" />


    </LinearLayout>



</LinearLayout>